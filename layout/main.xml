<body>
    <pad id="mpd">
        <tabs>

            <tab title="Now Playing">
                <right>
                    <hc>
                        <bind:dict bind="status">
                            <indent>
                                <hc>
                                    <togglebutton icon="volume-off" id="mute" style="mini" bind:pressed="muted" />
                                    <button icon="volume-down" id="voldown" style="mini" />
                                    <progressbar id="volume" width="100" bind:value="pvolume" />
                                    <button icon="volume-up" id="volup" style="mini" />
                                </hc>
                            </indent>
                        </bind:dict>

                        <button icon="step-backward" id="prev" style="mini" />
                        <button icon="play" id="play" style="mini" />
                        <button icon="pause" id="pause" style="mini" visible="false" />
                        <button icon="stop" id="stop" style="mini" />
                        <button icon="step-forward" id="next" style="mini" />
                    </hc>
                </right>

                <bind:dict bind="song">
                    <hc>
                        <button icon="trash" id="clear" style="mini" text="{Clear}" />
                        <button icon="refresh" id="refresh" style="mini" />
                        <label bind="title" />
                    </hc>
                </bind:dict>

                <bind:collection bind="playlist" id="playlist">
                    <sortabledt bind="__items">
                        <dtr>
                            <dth width="1%" />
                            <dth text="{Title}" />
                            <dth width="60" text="{Action}" />
                        </dtr>
                    </sortabledt>
                    <bind:template>
                        <dtr>
                            <dtd><icon bind="icon" /></dtd>
                            <dtd><label bind="title" /></dtd>
                            <dtd>
                                <tooltip text="{Play}"><button icon="play" id="play" style="mini" /></tooltip>
                                <tooltip text="{Remove}"><button icon="remove" style="mini" bind="__delete" /></tooltip>
                            </dtd>
                        </dtr>
                    </bind:template>
                </bind:collection>
            </tab>

            <tab title="Playlists">
            </tab>

            <tab title="Library">
            </tab>

            <tab title="Streams">
            </tab>

            <tab title="Outputs">
            </tab>
        </tabs>
    </pad>
</body>
