<body>
    <pad id="mpd">
        <vc>
            <bind:dict bind="status">
                <right>
                    <hc>
                        <tooltip text="{Mute}"><togglebutton icon="volume-off" id="mute" style="mini" bind:pressed="muted" /></tooltip>
                        <tooltip text="{Volume down}"><button icon="volume-down" id="voldown" style="mini" /></tooltip>
                        <progressbar id="volume" width="100" bind:value="pvolume" />
                        <tooltip text="{Volume up}"><button icon="volume-up" id="volup" style="mini" /></tooltip>

                        <indent>
                            <hc>
                                <tooltip text="{Previous}"><button icon="step-backward" id="prev" style="mini" /></tooltip>
                                <tooltip text="{Play}"><button icon="play" id="play" style="mini" /></tooltip>
                                <tooltip text="{Pause}"><button icon="pause" id="pause" style="mini" visible="false" /></tooltip>
                                <tooltip text="{Stop}"><button icon="stop" id="stop" style="mini" /></tooltip>
                                <tooltip text="{Next}"><button icon="step-forward" id="next" style="mini" /></tooltip>
                            </hc>
                        </indent>

                        <tooltip text="{Refresh}"><button icon="refresh" id="refresh" style="mini" /></tooltip>
                    </hc>
                </right>

                <hc>
                    <tooltip text="{Repeat}"><togglebutton icon="repeat" id="repeat" style="mini" bind:pressed="repeat" /></tooltip>
                    <tooltip text="{Random}"><togglebutton icon="random" id="random" style="mini" bind:pressed="random" /></tooltip>
                    <tooltip text="{Single}"><togglebutton icon="lock" id="single" style="mini" bind:pressed="single" /></tooltip>
                    <tooltip text="{Consume}"><togglebutton icon="cut" id="consume" style="mini" bind:pressed="consume" /></tooltip>
                </hc>
            </bind:dict>

            <bind:dict bind="song">
                <box scroll="True" height="32" bind:visible="present">
                    <label text="Playing “" /><label bind="title" style="bold" />
                    <label text="” from “" /><label bind="album" style="bold" />
                    <label text="” by " /><label bind="artist" style="bold" />
                </box>
            </bind:dict>

            <tabs id="tabs">

                <tab title="Now Playing">
                    <hc>
                        <button icon="plus" id="add" style="mini" text="{Add}" />
                        <button icon="trash" id="clear" style="mini" text="{Clear}" />
                    </hc>

                    <bind:collection bind="playlist" id="playlist">
                        <sortabledt bind="__items">
                            <dtr>
                                <dth width="1%" />
                                <dth text="{Artist}" />
                                <dth text="{Title}" />
                                <dth text="{Genre}" />
                                <dth text="{Time}" />
                                <dth width="60" text="{Action}" />
                            </dtr>
                        </sortabledt>
                        <bind:template>
                            <dtr>
                                <dtd><icon bind="icon" /></dtd>
                                <dtd><label bind="artist" /></dtd>
                                <dtd><label bind="title" /></dtd>
                                <dtd><label bind="genre" /></dtd>
                                <dtd><label bind="time" /></dtd>
                                <dtd>
                                    <tooltip text="{Play}"><button icon="play" id="play" style="mini" /></tooltip>
                                    <tooltip text="{Remove}"><button icon="remove" style="mini" bind="__delete" /></tooltip>
                                </dtd>
                            </dtr>
                        </bind:template>
                    </bind:collection>
                </tab>

                <tab title="Playlists">
                    <bind:collection bind="playlists" id="playlists">
                        <right>
                            <button icon="ok" id="rename" style="mini" text="{Rename}" />
                        </right>
                        <hc>
                            <button icon="plus" id="addpl" bind="__add" style="mini" text="{Add}" />
                            <button icon="trash" id="clearpl" style="mini" text="{Clear}" />
                        </hc>

                        <dt bind="__items">
                            <dtr>
                                <dth width="1%" />
                                <dth text="{Name}" />
                                <dth width="90" text="{Action}" />
                            </dtr>
                        </dt>
                        <bind:template>
                            <dtr>
                                <dtd><icon icon="music" /></dtd>
                                <dtd><editable id="playlist" bind="playlist" /></dtd>
                                <dtd>
                                    <tooltip text="{Append}"><button icon="plus" style="mini" id="load" /></tooltip>
                                    <tooltip text="{Clear}"><button icon="trash" id="clear" style="mini" /></tooltip>
                                    <tooltip text="{Remove}"><button icon="remove" style="mini" bind="__delete" /></tooltip>
                                </dtd>
                            </dtr>
                        </bind:template>
                    </bind:collection>
                </tab>

                <tab title="Library">
                    <right>
                        <hc>
                            <indent>
                                <hc>
                                    <button style="mini" icon="search" text="{Search}" id="search" />
                                    <button style="mini" icon="plus" text="{Add all}" id="searchadd" />
                                </hc>
                            </indent>
                            <button icon="refresh" id="update" style="mini" text="{Update}" />
                        </hc>
                    </right>
                    <bind:dict bind="taxonomy">
                        <hc>
                            <tooltip text="{Artist}">
                                <dropdown id="artist" bind="artist" bind:values="artists" bind:labels="artists" />
                            </tooltip>
                            <tooltip text="{Album}">
                                <dropdown id="album" bind="album" bind:values="albums" bind:labels="albums" />
                            </tooltip>
                            <tooltip text="{Genre}">
                                <dropdown id="genre" bind="genre" bind:values="genres" bind:labels="genres" />
                            </tooltip>
                            <indent>
                            </indent>
                        </hc>
                    </bind:dict>
                    <bind:collection bind="library" id="library">
                        <dt bind="__items">
                            <dtr>
                                <dth width="1%" />
                                <dth text="{Artist}" />
                                <dth text="{Title}" />
                                <dth text="{Genre}" />
                                <dth text="{Time}" />
                                <dth width="60" text="{Action}" />
                            </dtr>
                        </dt>
                        <hc bind="__paging" />
                        <bind:template>
                            <dtr>
                                <dtd><icon icon="music" /></dtd>
                                <dtd><label bind="artist" /></dtd>
                                <dtd><label bind="title" /></dtd>
                                <dtd><label bind="genre" /></dtd>
                                <dtd><label bind="time" /></dtd>
                                <dtd>
                                    <tooltip text="{Append}"><button icon="plus" style="mini" id="add" /></tooltip>
                                </dtd>
                            </dtr>
                        </bind:template>
                    </bind:collection>
                </tab>

                <tab title="Outputs">
                    <bind:collection bind="outputs" id="outputs">
                        <dt bind="__items">
                            <dtr>
                                <dth width="1%" />
                                <dth text="{Name}" />
                            </dtr>
                        </dt>
                        <bind:template>
                            <dtr>
                                <dtd><togglebutton icon="volume-up" style="mini" bind:pressed="outputenabled" id="enabled" /></dtd>
                                <dtd><label bind="outputname" /></dtd>
                            </dtr>
                        </bind:template>
                    </bind:collection>
                </tab>
            </tabs>
        </vc>
    </pad>

    <dialog visible="False" id="add_dialog" buttons="[
        {'id': 'add', 'text': _('Add')},
        {'id': 'cancel', 'text': _('Cancel')}
        ]">
        <pad>
            <formline text="{URL}">
                <textbox id="new_song_url" />
            </formline>
        </pad>
    </dialog>
</body>
