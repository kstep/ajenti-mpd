<body>
    <pad id="mpd">
        <tabs>

            <tab title="Now Playing">
                <bind:dict bind="song">
                    <label text="Playing “" /><label bind="title" />
                    <label text="” from “" /><label bind="album" />
                    <label text="” by " /><label bind="artist" />
                </bind:dict>

                <right>
                    <hc>
                        <bind:dict bind="status">
                            <indent>
                                <hc>
                                    <togglebutton icon="volume-off" id="mute" style="mini" bind:pressed="muted" />
                                    <button icon="volume-down" id="voldown" style="mini" />
                                    <progressbar id="volume" width="100" bind:value="pvolume" />
                                    <button icon="volume-up" id="volup" style="mini" />
                                </hc>
                            </indent>
                        </bind:dict>

                        <button icon="step-backward" id="prev" style="mini" />
                        <button icon="play" id="play" style="mini" />
                        <button icon="pause" id="pause" style="mini" visible="false" />
                        <button icon="stop" id="stop" style="mini" />
                        <button icon="step-forward" id="next" style="mini" />
                    </hc>
                </right>

                <hc>
                    <button icon="plus" id="add" style="mini" text="{Add}" />
                    <button icon="trash" id="clear" style="mini" text="{Delete}" />
                    <button icon="refresh" id="refresh" style="mini" />
                </hc>

                <bind:collection bind="playlist" id="playlist">
                    <sortabledt bind="__items">
                        <dtr>
                            <dth width="1%" />
                            <dth text="{Title}" />
                            <dth width="60" text="{Action}" />
                        </dtr>
                    </sortabledt>
                    <bind:template>
                        <dtr>
                            <dtd><icon bind="icon" /></dtd>
                            <dtd><label bind="title" /></dtd>
                            <dtd>
                                <tooltip text="{Play}"><button icon="play" id="play" style="mini" /></tooltip>
                                <tooltip text="{Remove}"><button icon="remove" style="mini" bind="__delete" /></tooltip>
                            </dtd>
                        </dtr>
                    </bind:template>
                </bind:collection>
            </tab>

            <tab title="Playlists">
                <bind:collection bind="playlists" id="playlists">
                    <hc>
                        <button icon="plus" id="addpl" bind="__add" style="mini" text="{Add}" />
                        <button icon="trash" id="clearpl" style="mini" text="{Delete}" />
                    </hc>
                    <dt bind="__items">
                        <dtr>
                            <dth width="1%" />
                            <dth text="{Name}" />
                            <dth width="60" text="{Action}" />
                        </dtr>
                    </dt>
                    <bind:template>
                        <dtr>
                            <dtd><icon icon="music" /></dtd>
                            <dtd><label bind="playlist" /></dtd>
                            <dtd>
                                <tooltip text="{Play}"><button icon="play" style="mini" id="play" /></tooltip>
                                <tooltip text="{Remove}"><button icon="remove" style="mini" bind="__delete" /></tooltip>
                            </dtd>
                        </dtr>
                    </bind:template>
                </bind:collection>
            </tab>

            <tab title="Library">
            </tab>

            <tab title="Outputs">
                <bind:collection bind="outputs" id="outputs">
                    <dt bind="__items">
                        <dtr>
                            <dth width="1%" />
                            <dth text="{Name}" />
                        </dtr>
                    </dt>
                    <bind:template>
                        <dtr>
                            <dtd><togglebutton icon="volume-up" style="mini" bind:pressed="outputenabled" id="enabled" /></dtd>
                            <dtd><label bind="outputname" /></dtd>
                        </dtr>
                    </bind:template>
                </bind:collection>
            </tab>
        </tabs>
    </pad>

    <dialog visible="False" id="add_dialog" buttons="[
        {'id': 'add', 'text': _('Add')},
        {'id': 'cancel', 'text': _('Cancel')}
        ]">
        <pad>
            <formline text="{URL}">
                <textbox id="new_song_url" />
            </formline>
        </pad>
    </dialog>
</body>
